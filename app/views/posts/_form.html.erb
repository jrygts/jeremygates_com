<%= form_with(model: post, local: true, class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:
      </h2>
      <ul class="list-disc ml-5">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-4 py-2 text-gray-900 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div>
    <%= form.label :body, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.text_area :body, rows: 6, class: "w-full border border-gray-300 rounded px-4 py-2 text-gray-900 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div>
    <%= form.label :published_at, class: "block text-gray-700 font-medium mb-1" %>
    <%= form.datetime_field :published_at, class: "w-full border border-gray-300 rounded px-4 py-2 text-gray-900 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div class="field">
    <%= form.label :published, class: "mr-2 text-gray-700" %>
    <%= form.check_box :published, class: "text-gray-700" %>
  </div>

  <div class="flex item-center gap-4">
    <%= form.submit "Save Post", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
    <% link_to "Back to posts", posts_path, class: "text-blue-600 hover:underline" %>
  </div>

<% end %>
