<p class="text-green-600 mb-4"><%= notice %></p>

<div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6 space-y-4">
    <h1 class="text-3xl font-bold text-blue-700"><%= @post.title %></h1>

    <p> class="text-sm text-gray-500">
    <span class="">Published:</span> <%= @post.published ? "Yes" : "No" %>
    |
    <span class="font-semibold">Published at:</span>
    <%= @post.published_at.present? ? @post.published_at.strftime("%B %d, %Y %l:%M %p") : "N/A" %>
  </p>

  <div>
    <h2 class="text-xl font-semibold text-gray-800 mb-2">Body</h2>
    <p class="text-gray-700 leading-relaxed"><%= simple_format(@post.body) %></p>
  </div>

  <hr class="my-4">

  <div class="flex flex-wrap gap-4"
    <%= link_to "Edit this post", edit_post_path(@post),
      class: "bg-yellow-400 text-black px-4 py-2 rounded hover:bg-yellow-500 transition" %>

    <%= link_to "Back to posts", posts_path,
      class: "bg-gray-300 text-black px-4 py-2 rounded hover:bg-gray-400 transition" %>

    <%= button_to "Delete this post", @post,
       method: :delete,
       data: { confirm: "Are you sure?" },
       class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition" %>

  </div>
</div>
