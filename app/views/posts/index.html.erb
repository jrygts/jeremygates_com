<% content_for :title, "Posts" %>
<% content_for :header, "Posts"

<div class="max-w-3xl mx-auto px-4 py-12 prose">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <article class="mb-12">
        <h2 class="text-2xl font-semibold mb-1">
          <%= link_to post.title, post, class: "hover:underline" %>
        </h2>
        <p class="text-sm text-gray-500 mb-2">
          <%= post.created_at.strftime("%B %e, %Y") %>
        </p>
        <p class="mb-4"><%= truncate(post.body, length: 200) %></p>
          <%= link_to "Read more ->", post, class: "text-sm hover:underline" %>
      </article>
    <% end %>
  <% else %>
    <p>No posts yet. <%= link_to "Create one", new_post_path %></p>
  <% end %>
</div>
